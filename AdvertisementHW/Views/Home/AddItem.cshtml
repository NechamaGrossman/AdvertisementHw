<div class="container" style="margin-top:40px">
    <form method="post" action="/home/SubmitItem" class="col-md-6 col-lg-offset-3 well">

        <br />
        <br />
        <br />
        <input type="text" name="Name" placeholder="Name" class="form-control valid" />
        <br />
        <input type="text" name="PhoneNumber" placeholder="Phone Number" class="form-control valid" />
        <br />
        <input type="hidden" name="date" value="@DateTime.Now" />
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <textarea class="form-control" name="text" rows="20"></textarea>
            </div>

            <button id="submit-button" class=" btn btn-primary">Submit</button>
        </div>
        <br />
    </form>
</div>

